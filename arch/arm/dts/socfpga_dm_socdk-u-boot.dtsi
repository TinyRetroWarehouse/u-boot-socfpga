#include "socfpga_dm-u-boot.dtsi"

/{
	memory {
		/* 8GB */
		reg = <0 0x00000000 0 0x80000000>,
		      <2 0x80000000 1 0x80000000>;
	};
};

&flash0 {
	compatible = "jedec,spi-nor";
	spi-tx-bus-width = <4>;
	spi-rx-bus-width = <4>;
	u-boot,dm-pre-reloc;
};

&i2c1 {
	status = "okay";
};

&nand {
	u-boot,dm-pre-reloc;
};

&mmc {
	drvsel = <3>;
	smplsel = <0>;
	u-boot,dm-pre-reloc;
};

&watchdog0 {
	u-boot,dm-pre-reloc;
};
